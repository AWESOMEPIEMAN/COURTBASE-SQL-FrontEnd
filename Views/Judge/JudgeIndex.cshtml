@model CourtroomProject.COURTER.Judge

@{
    ViewBag.Title = "JudgeIndex";
}

<h2>JudgeIndex</h2>

<style>
    .error {
        color: red;
    }
</style>

@using (Html.BeginForm("JudgeAdd", "Judge", FormMethod.Post))
{
    <div class="container">
        <div class="form-group">
            @Html.HiddenFor(x => x.Judge_ID)
            <label>Name</label>

            @Html.ValidationMessageFor(x => x.name_judge, "", new { @class = "error" })
            @Html.TextBoxFor(x => x.name_judge, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label>Age</label>

            @Html.ValidationMessageFor(x => x.age_judge, "", new { @class = "error" })
            @Html.TextBoxFor(x => x.age_judge, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label>Rank</label>

            @Html.ValidationMessageFor(x => x.rank_judge, "", new { @class = "error" })
            @Html.TextBoxFor(x => x.rank_judge, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label>Years Of Service</label>

            @Html.ValidationMessageFor(x => x.YearsInservice, "", new { @class = "error" })
            @Html.TextBoxFor(x => x.YearsInservice, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Submit</button>
            <button type="reset" class="btn btn-danger">Reset</button>
        </div>
    </div>
}
