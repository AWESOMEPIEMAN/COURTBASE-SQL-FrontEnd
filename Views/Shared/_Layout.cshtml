<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - CourtBase Application Developed By Usman Hamid</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("CourtBase", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse" >
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Spectators", "SpectatorList", "Spectators")</li>
                    <li>@Html.ActionLink("Sheriffs", "SheriffList", "Sheriff")</li>
                    <li>@Html.ActionLink("Plaintiffs", "PlaintiffList", "Plaintiff")</li>
                    <li>@Html.ActionLink("Defendants", "DefendantList", "Defendant")</li>
                    <li>@Html.ActionLink("Juries", "JuryList", "Jury")</li>
                    <li>@Html.ActionLink("Clerks", "ClerkList", "Clerk")</li>
                    <li>@Html.ActionLink("Firms", "FirmList", "Firm")</li>
                    <li>@Html.ActionLink("Lawyers", "LawyerList", "Lawyer")</li>
                    <li>@Html.ActionLink("Judge", "JudgeList", "Judge")</li>
                    <li>@Html.ActionLink("Courtrooms", "CourtroomList", "Courtroom")</li>
                    <li>@Html.ActionLink("District Courts", "DistrictCourtList", "DistrictCourt")</li>
                    <li>@Html.ActionLink("Courts", "HighCourtList", "HighCourt")</li>
                </ul>
                
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - CourtBase Application Developed by Usman Hamid</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
