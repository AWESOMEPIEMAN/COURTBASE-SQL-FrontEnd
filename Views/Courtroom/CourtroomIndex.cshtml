@model CourtroomProject.COURTER.courtroom
@{
    ViewBag.Title = "CourtroomIndex";
}

<h2>CourtroomIndex</h2>


<style>
    .error {
        color: red;
    }
</style>

@using (Html.BeginForm("CourtroomAdd", "Courtroom", FormMethod.Post))
{
    <div class="container">
        <div class="form-group">
            @Html.HiddenFor(x => x.Room_ID)
            <label>Location</label>

            @Html.ValidationMessageFor(x => x.location_cr, "", new { @class = "error" })
            @Html.TextBoxFor(x => x.location_cr, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label>Phone</label>

            @Html.ValidationMessageFor(x => x.Phone_no_cr, "", new { @class = "error" })
            @Html.TextBoxFor(x => x.Phone_no_cr, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label>Case</label>

            @Html.ValidationMessageFor(x => x.case_t, "", new { @class = "error" })
            @Html.TextBoxFor(x => x.case_t, new { @class = "form-control" })
        </div>

       

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Submit</button>
            <button type="reset" class="btn btn-danger">Reset</button>
        </div>
    </div>
}