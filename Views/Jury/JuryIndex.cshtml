@model CourtroomProject.COURTER.Jury
@{
    ViewBag.Title = "JuryIndex";
}

<h2>JuryIndex</h2>



<style>
    .error {
        color: red;
    }
</style>

@using (Html.BeginForm("JuryAdd", "Jury", FormMethod.Post))
{
    <div class="container">
        <div class="form-group">
            @Html.HiddenFor(x => x.Member_ID)
            <label>Name</label>

            @Html.ValidationMessageFor(x => x.Name_jury, "", new { @class = "error" })
            @Html.TextBoxFor(x => x.Name_jury, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label>Age</label>

            @Html.ValidationMessageFor(x => x.age, "", new { @class = "error" })
            @Html.TextBoxFor(x => x.age, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label>DOB</label>

            @Html.ValidationMessageFor(x => x.DOB_Jury, "", new { @class = "error" })
            @Html.TextBoxFor(x => x.DOB_Jury, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label>Address</label>

            @Html.ValidationMessageFor(x => x.address_jury, "", new { @class = "error" })
            @Html.TextBoxFor(x => x.address_jury, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Submit</button>
            <button type="reset" class="btn btn-danger">Reset</button>
        </div>
    </div>
}