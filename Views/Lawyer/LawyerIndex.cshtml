@model CourtroomProject.COURTER.lawyer
@{
    ViewBag.Title = "LawyerIndex";
}

<h2>LawyerIndex</h2>

<style>
    .error {
        color: red;
    }
</style>

@using (Html.BeginForm("LawyerAdd", "Lawyer", FormMethod.Post))
{
    <div class="container">
        <div class="form-group">
            @Html.HiddenFor(x => x.Lawyer_ID)
            <label>Name</label>

            @Html.ValidationMessageFor(x => x.name_lawyer, "", new { @class = "error" })
            @Html.TextBoxFor(x => x.name_lawyer, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label>Client</label>

            @Html.ValidationMessageFor(x => x.client, "", new { @class = "error" })
            @Html.TextBoxFor(x => x.client, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Submit</button>
            <button type="reset" class="btn btn-danger">Reset</button>
        </div>
    </div>
}
